<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andrew.tictactoe.Currency">

    <Button
        android:id="@+id/currencyOption3"
        android:layout_width="102dp"
        android:layout_height="56dp"
        android:onClick="makePurchase"
        android:tag="1000TTD"
        android:text="$1000 TTD\n($10 USD)"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="273dp" />

    <Button
        android:id="@+id/currencyOption1"
        android:layout_width="102dp"
        android:layout_height="56dp"
        android:onClick="makePurchase"
        android:tag="100TTD"
        android:text="$100 TTD\n($2 USD)"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="108dp" />

    <TextView
        android:id="@+id/currencyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Purchase Currency"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase $TTD using Google"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="53dp" />

    <Button
        android:id="@+id/currencyOption2"
        android:layout_width="102dp"
        android:layout_height="56dp"
        android:onClick="makePurchase"
        android:tag="500TTD"
        android:text="$500 TTD\n($6 USD)"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="188dp" />
</android.support.constraint.ConstraintLayout>
